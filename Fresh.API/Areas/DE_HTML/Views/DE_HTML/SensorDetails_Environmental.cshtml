@model EMS.NIEM.Sensor.EnvironmentalSensorDetails

@*This is the main view for displaying sensor environmental info*@

<table style="color:black; border-collapse: collapse; border: 1px solid black; width: 25%;">
  <tr>
    <th style="text-align: left" colspan="2">
      Environmental Details
    </th>
  </tr>

  @{
    Fresh.API.Areas.DE_HTML.Models.NameValue_ViewModel nameValue = new Fresh.API.Areas.DE_HTML.Models.NameValue_ViewModel();
  }


  @if (Model.ShouldSerializeTemperature())
  {
    nameValue.Name = "Temperature:";
    float temp = (float)Model.Temperature / 10;

    nameValue.Value = temp.ToString("##0.0") + " °F";

    @Html.Partial("SensorDetails_TableRow50", nameValue);
  }


  @if (Model.ShouldSerializeHumidity())
  {
    nameValue.Name = "Humidity:";
    float temp = (float)Model.Humidity / 10;

    nameValue.Value = temp.ToString("####0.0") + " %";

    @Html.Partial("SensorDetails_TableRow50", nameValue);
  }


  @if (Model.ShouldSerializePressure())
  {
    nameValue.Name = "Pressure:";
    float temp = (float)Model.Pressure / 10;

    nameValue.Value = temp.ToString("####0.0");

    @Html.Partial("SensorDetails_TableRow50", nameValue);
  }
</table>
